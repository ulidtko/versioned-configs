if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

[ -d "$HOME/android-sdk/tools" ] && PATH="$PATH:$HOME/android-sdk/tools"
[ -d "$HOME/android-sdk/platform-tools" ] && PATH="$PATH:$HOME/android-sdk/platform-tools"

export EDITOR=vim
export PAGER=less

export LESS="-i -R" # case-insensitive search and term colors in less(1)
[ -x `which lesspipe` ] && eval $(lesspipe) # useful input preprocessor for less

export PYTHONSTARTUP="$HOME/.pythonrc"

export CFLAGS="-O2 -Wall -Wpointer-arith -Wcast-align -Wcast-qual -Wwrite-strings"
export CXXFLAGS="${CFLAGS} -Weffc++"

alias ls="ls --color=auto"
alias grep="grep --color=auto --exclude=tags --exclude-dir=.svn"

alias c="true;clear;cd"
alias df=pydf
alias R="R --no-save"

svn () {
    case "$1" in
        log)
            command svn "$@" --limit 20 | less -FX ;;
        diff|blame|annotate)
            command svn "$@" | less -FX ;;
        *)
            command svn "$@" ;;
    esac
}
