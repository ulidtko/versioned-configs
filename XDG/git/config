	allowedSignersFile = /home/ulidtko/.config/git/allowed_ssh_signers

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[core]
	pager = less -FRSX
	#excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[alias]
	co = checkout
	st = status
	diffc = diff --cached
	logg = log --color --graph --pretty=format:'%C(cyan dim)%h%Creset -%C(red bold)%d%Creset %s %C(yellow)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[pull]
	rebase = true
[push]
	default = upstream
	gpgSign = if-asked
[diff]
	mnemonicprefix = true
	colorMoved = zebra
[diff "word-diff"]
	command = /home/ulidtko/.config/git/word-diff-wrapper
[diff "sopsdiffer"]
	textconv = sops -d
[rebase]
	autosquash = true
[branch]
	autosetupmerge = always
	autosetuprebase = always
[rerere]
	enabled = true
[merge]
	tool = meld
	stat = true
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
	#cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[advice]
	detachedHead = false
	skippedCherryPicks = false
[init]
	defaultBranch = main
[safe]
	directory = /home/ulidtko/src/bcc

#-- https://github.com/so-fancy/diff-so-fancy
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
[add "interactive"]
	#-- workaround for git 2.37, see diff-so-fancy #439
	useBuiltin = false
[diff-so-fancy]
	stripLeadingSymbols = false
