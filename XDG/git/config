# vim: ft=gitconfig

[advice]
	detachedHead = false
	skippedCherryPicks = false

[alias]
	co = checkout
	st = status
	diffc = diff --cached
	logg = log --color --graph --pretty=format:'%C(cyan dim)%h%Creset -%C(red bold)%d%Creset %s %C(yellow)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[blame]
	#-- https://www.michaelheap.com/git-ignore-rev/
	# FIXME blame throws fatal error if absent
	ignoreRevsFile = .git-blame-ignore-revs
	markIgnoredLines = true
	markUnblamableLines = true

[branch]
	autosetupmerge = always
	autosetuprebase = always

[core]
	pager = less -FRSX
	#excludesfile = ~/.gitignore_global

[diff]
	colormoved = zebra
	mnemonicprefix = true
[diff "word-diff"]
	command = /home/ulidtko/.config/git/word-diff-wrapper
[diff "sopsdiffer"]
	textconv = sops -d

[fetch]
	prune = true

[init]
	defaultBranch = main

[merge]
	tool = meld
	stat = true
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
	#cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[pull]
	rebase = true
[push]
	default = upstream
	gpgSign = if-asked
[rebase]
	autosquash = true

[rerere]
	enabled = true

[safe]
	directory = /home/ulidtko/src/bcc


#-- ID & commit signing
[user]
	name = Max Ulidtko
	email = ulidtko@gmail.com
	signingkey = /home/ulidtko/.ssh/git-commit-signing-key
[commit]
	gpgsign = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = /home/ulidtko/.config/git/allowed_ssh_signers


#-- https://github.com/so-fancy/diff-so-fancy
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
#[add "interactive"]
#	#-- workaround for git <2.38, see diff-so-fancy #439
#	useBuiltin = false
[diff-so-fancy]
	stripLeadingSymbols = false
	markEmptyLines = false

#-- https://dandavison.github.io/delta
[delta]
	navigate = true    # use n and N to move between diff sections
	features = colibri
	commit-decoration-style = navy orchid box
	commit-style = navy orchid bold italic
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[include]
	path = /home/ulidtko/.config/git/delta-themes.gitconfig


[url "git@github.com:zoomin-software/"]
	insteadOf = https://github.com/zoomin-software/
[url "git@bitbucket.org:zoominsoftware/"]
	insteadOf = https://bitbucket.org/zoominsoftware/
